{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "components/Post.jsx",
    "app/posts/[id].jsx",
    "app/comments.jsx",
    "app/login/signUp.jsx",
    "app/login/index.jsx"
  ]
}
